domain Cauldrons {
  use Types: {
    EnergyTier,
    VolumeTier,
    Cauldron,
  };

  enum {
    ProfoundCauldron = Cauldron(
      name: 'Profound Tier Cauldron',
      volume: VolumeTier.High;
