{
    "compilerOptions": {
        "outDir": ".",
        "rootDir": "../..",
        "inlineSourceMap": true,
        "noEmit": true,
        "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noErrorTruncation": true,
        "lib": [
            "ESNext"
        ],
        "baseUrl": ".",
        "paths": {
            "@alchemy/*": [
                "./packages/*"
            ]
        }
    },
    "exclude": [
        "../../node_modules",
        "../../doc",
        "./build",
        "*.a.ts"
    ]
}
