{
    "compilerOptions": {
        "outDir": "./build",
        "rootDir": ".",
        "inlineSourceMap": true,
        "noEmit": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noErrorTruncation": true,
        "lib": [
            "ESNext"
        ],
        "baseUrl": "."
    },
    "exclude": [
        "../../node_modules",
        "../../doc",
        "./build",
        "*.a.ts"
    ]
}
