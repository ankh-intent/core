{
  "compilerOptions": {
    "outDir": ".",
    "rootDir": "./bin",
    "inlineSourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "lib": [
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "doc"
  ]
}
